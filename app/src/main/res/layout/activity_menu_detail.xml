                                <!--android:fontFamily="@font/appfont"-->
                                <!--android:gravity="center|top"-->
                                <!--android:text="20 min"-->
                                <!--android:textSize="@dimen/_15sdp" />-->

                        <!--</LinearLayout>-->

                    <!--</LinearLayout>-->

                <!--</android.support.v7.widget.CardView>-->

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/xml_rounded_rectangle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_preparation_time" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvPreparationTime"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:fontFamily="@font/appfont"
                                android:gravity="center"
                                android:text=""
                                android:textSize="@dimen/_15sdp" />

                            <TextView
                                android:id="@+id/tvPreparationTimeValue"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:fontFamily="@font/appfont"
                                android:gravity="center|top"
                                android:text="20 min"
                                android:textSize="@dimen/_15sdp" />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivDecreaseQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:layout_toStartOf="@+id/ivBlank"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_minus2sdp"
                    android:src="@drawable/ic_cart_sub" />

                    <ImageView
                        android:id="@+id/ivBlank"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_cart_no_add" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/appfont"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />

                    <ImageView
                        android:id="@+id/ivIncreaseQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_minus2sdp"
                        android:layout_toEndOf="@+id/ivBlank"
                        android:src="@drawable/ic_cart_add" />
                </RelativeLayout>
                <!--<FrameLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
