<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.minwein.customer.activity.AddressCheckoutActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/ablCheckOut"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbAddress"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/tvAddressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_15sdp"
                android:text=""
                android:layout_marginStart="@dimen/_3sdp"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/ivAddressToolbarAddAddressBack"
                android:layout_width="@dimen/_20sdp"
                android:layout_gravity="start"
                android:src="@drawable/ic_back"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/ivAddressToolbarAddAddress"
                android:layout_width="@dimen/_20sdp"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_height="match_parent" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAddressList"
        android:layout_width="match_parent"
        android:layout_below="@+id/ablCheckOut"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tvCheckoutAddressNoDataFound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"/>

</RelativeLayout>
