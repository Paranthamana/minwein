<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <!--android:background="@android:color/transparent"-->


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/ivback"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tvHeader"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"/>

            <ImageView
                android:id="@+id/ivSortby_save"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_address_save" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/cvSortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">


        <LinearLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_popularity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tvA_Z"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tv_Fast_Delivery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tv_Recommended"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tv_Rating"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tv_New"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tv_Delivery_fee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tv_open"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tv_Food_Truck"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tv_Restaurant"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
