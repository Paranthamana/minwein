<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/xml_rounded_rectangle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp">
                            <!--<com.facebook.drawee.view.SimpleDraweeView-->

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/sdvRateAndReviews"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:background="@drawable/xml_rounded_rectangle"
                                fresco:actualImageScaleType="centerInside" />

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/appfont"
                                android:gravity="center|top"
                                android:padding="@dimen/_3sdp"
                                android:text="Oct 12,1996"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_6sdp">

                            <TextView
                                android:id="@+id/tvHeaderName"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:fontFamily="@font/appfont"
                                android:text="Food Name"
                                android:textSize="@dimen/_13sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <RatingBar
                                    android:id="@+id/rtbProductRating"
                                    style="@style/foodRatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:stepSize="0.5" />

                                <TextView
                                    android:id="@+id/tvRestaurantRatingBarValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/appfont"
                                    android:gravity="center"
                                    android:text="(5.0)"
                                    android:textSize="@dimen/_13sdp" />
                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_5sdp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:background="@color/lightgray" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_5sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvFirstText"
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/appfont"
                                    android:gravity="center|start"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="@dimen/_3sdp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/appfont"
                                    android:gravity="center|start"
                                    android:text=":"
                                    android:textSize="@dimen/_10sdp" />

                                <RatingBar
                                    android:id="@+id/rtbDeliverytimeRating"
                                    style="@style/foodRatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:stepSize="0.5" />

                                <TextView
                                    android:id="@+id/tvFirstTextRatingBarValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/appfont"
                                    android:gravity="center"
                                    android:text="(5.0)"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp">

                                <TextView
                                    android:id="@+id/tvSecondText"
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/appfont"
                                    android:gravity="center|start"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="@dimen/_3sdp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/appfont"
                                    android:gravity="center|start"
                                    android:text=":"
                                    android:textSize="@dimen/_10sdp" />

                                <RatingBar
                                    android:id="@+id/rtbFoodTemperatureRating"
                                    style="@style/foodRatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:stepSize="0.5" />

                                <TextView
                                    android:id="@+id/tvSecondTextRatingBarValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/appfont"
                                    android:gravity="center"
                                    android:text="(5.0)"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_lastrow"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp">

                                <TextView
                                    android:id="@+id/tvThirdText"
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/appfont"
                                    android:gravity="center|start"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="@dimen/_3sdp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/appfont"
                                    android:gravity="center|start"
                                    android:text=":"
                                    android:textSize="@dimen/_10sdp" />

                                <RatingBar
                                    android:id="@+id/rtbpriceRating"
                                    style="@style/foodRatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:stepSize="0.5" />

                                <TextView
                                    android:id="@+id/tvThirdTextRatingBarValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/appfont"
                                    android:gravity="center"
                                    android:text="(5.0)"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/lightgray" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDescribtion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/appfont"
                        android:gravity="center|start"
                        android:maxLines="2"
                        android:text="Lorum ipsum is simply dummy text of the printing and typesetting industry.ipsum has beenthe industry 1500's"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>