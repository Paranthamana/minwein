<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/ivMapBack"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/tvMapHeader"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/appfontbold"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_25sdp"/>

            <!--<ImageView-->
                <!--android:id="@+id/ivRefresh"-->
                <!--android:layout_width="@dimen/_20sdp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginEnd="@dimen/_5sdp"-->
                <!--android:layout_marginStart="@dimen/_5sdp"-->
                <!--android:layout_marginTop="@dimen/_5sdp"-->
                <!--android:src="@drawable/ic_refresh"-->
                <!--android:visibility="gone"/>-->
            <FrameLayout
                android:id="@+id/flCart"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/ivRestaurantDetailsCart"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@drawable/ic_cart" />

                <TextView
                    android:id="@+id/tvDetailCartValue"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/xml_shape_rounded_circledarkgreen"
                    android:fontFamily="@font/appfontbold"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

            </FrameLayout>

            <ImageView
                android:id="@+id/ivMapFilter"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/ic_filter"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivList"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/ic_list" />

            <ImageView
                android:id="@+id/ivMapMenu"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/ic_menu_dots" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fMapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </fragment>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:paddingBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/ivAddMap"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_toStartOf="@+id/ivSubMap"
            android:src="@drawable/ic_add_map" />

        <ImageView
            android:id="@+id/ivSubMap"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/ic_sub_map" />

        <ImageView
            android:id="@+id/ivCurrentLocation"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_toEndOf="@+id/ivSubMap"
            android:src="@drawable/ic_current_location_map" />

        <ImageView
            android:id="@+id/ivRefresh"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_toEndOf="@+id/ivCurrentLocation"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/ic_refresh" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>