<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/tvProfileTitle"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/appfontmedium"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/im_Profile_add"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_3sdp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/appfont"
                    android:inputType="text"
                    android:paddingStart="@dimen/_15sdp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_user" />
                    <!--<android.support.design.widget.TextInputLayout-->

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/etFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/appfont"
                            android:gravity="center|start"
                            android:background="@null"
                            android:text=""
                            android:inputType="textPersonName"
                            android:textColorHint="@color/gray"
                            android:textAlignment="viewStart"
                            android:textDirection="locale"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:background="@color/gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_user" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilLastName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/etLastName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/appfont"
                            android:gravity="center|start"
                            android:inputType="textPersonName"
                            android:textColorHint="@color/gray"
                            android:textSize="15sp"
                            android:textAlignment="viewStart"
                            android:textDirection="locale"
                            android:background="@null" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_email" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/etemail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/appfont"
                            android:gravity="center|start"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/gray"
                            android:textSize="15sp"
                            android:textAlignment="viewStart"
                            android:textDirection="locale"
                            android:background="@null" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_mobile" />



                        <TextView
                            android:id="@+id/tvPrefixMobileNumber"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:gravity="center|bottom"
                            android:text="+966"
                            android:textSize="15sp" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/etPhonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/appfont"
                            android:gravity="center|start"
                            android:inputType="phone"
                            android:textColorHint="@color/gray"
                            android:textSize="15sp"
                            android:textAlignment="viewStart"
                            android:textDirection="locale"
                            android:background="@null"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_gender" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/etGender"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:focusable="false"
                                android:fontFamily="@font/appfont"
                                android:gravity="center|start"
                                android:inputType="text"
                                android:textColorHint="@color/gray"
                                android:textSize="15sp"
                                android:textAlignment="viewStart"
                                android:textDirection="locale"
                                android:background="@null"/>
                        </android.support.design.widget.TextInputLayout>

                        <ToggleButton
                            android:id="@+id/tbGender"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:background="@drawable/xml_gender_toggle_selector"
                            android:textOff=""
                            android:textOn="" />

                    </FrameLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/ll_DOB"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_date" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilDateOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/etDateofbirth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:focusable="false"
                            android:fontFamily="@font/appfont"
                            android:gravity="center|start"
                            android:hint=""
                            android:inputType="date"
                            android:textColorHint="@color/gray"
                            android:textAlignment="viewStart"
                            android:textDirection="locale"
                            android:textSize="15sp"
                            android:background="@null"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:background="@color/gray" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


    <!--</ScrollView>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="#000000"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/tvSubscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/appfont"
            android:paddingLeft="@dimen/_5sdp"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSubscriptionText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ToggleButton
                android:id="@+id/tbSubscription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_weight="6"
                android:background="@drawable/xml_subscription_toogle_selector"
                android:textOff=""
                android:textOn="" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
