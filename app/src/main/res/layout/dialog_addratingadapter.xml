<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@drawable/xml_rounded_rectangle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:fontFamily="@font/appfontmedium"
            android:textSize="@dimen/_13sdp"
            android:text="Chicken"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/_5sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTaste"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_15sdp" />

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_15sdp" />

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent" />

            <RatingBar
                android:id="@+id/rtbTasteRating"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:stepSize="0.5"
                android:paddingTop="@dimen/_4sdp" />

            <TextView
                android:id="@+id/tvTasteratingValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="(0.0)"
                android:fontFamily="@font/appfont"
                android:layout_gravity="center"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTiming"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_15sdp" />

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_15sdp" />

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent" />

            <RatingBar
                android:id="@+id/rtbTimingRating"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:stepSize="0.5"
                android:paddingTop="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/tvTimingratingValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/appfont"
                android:text="(0.0)"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFoodPrice"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_15sdp" />

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_15sdp" />

            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent" />

            <RatingBar
                android:id="@+id/rtbPriceRating"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:stepSize="0.5"
                android:paddingTop="@dimen/_4sdp" />

            <TextView
                android:id="@+id/tvPriceratingValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/appfont"
                android:text="(0.0)"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>

    </LinearLayout>

            <EditText
                android:id="@+id/etcomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/appfont"
                android:text=""
                android:textSize="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>