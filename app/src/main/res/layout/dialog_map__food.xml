<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xml_rounded_rectangle"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/appfont"
                android:gravity="center|start"
                android:paddingStart="@dimen/_1sdp"
                android:text="Chicken Lolipop"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/ivFood"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/xml_rounded_rectangle"
                        fresco:actualImageScaleType="fitCenter"
                        android:padding="@dimen/_5sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/tvItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/appfont"
                        android:gravity="center|start"
                        android:text="Restaurant Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <Space
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="3dp" />

                    <TextView
                        android:id="@+id/tvFoodPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="41dp"
                        android:fontFamily="@font/appfont"
                        android:gravity="center|start"
                        android:maxLines="2"
                        android:text="Places"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:paddingEnd="@dimen/_1sdp"
                android:paddingStart="@dimen/_8sdp">

                <RatingBar
                    android:id="@+id/rtbFoodRating"
                    style="@style/foodRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:paddingTop="@dimen/_4sdp"
                    android:rating="4"
                    android:stepSize="1" />

                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvFoodRatingText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/appfont"
                    android:gravity="center"
                    android:text="(5.0)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/rtbFoodRating"/>

                <TextView
                    android:id="@+id/tvViewItem"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"/>


            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

