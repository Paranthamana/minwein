<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:weightSum="1">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/ivTrucks"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        fresco:actualImageScaleType="fitCenter"
                        android:background="@drawable/xml_rounded_rectangle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:paddingTop="@dimen/_6sdp"
                    android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvfoodtruckName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Restaurant Name"
                            android:fontFamily="@font/appfont"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="@dimen/_15sdp"/>
                    <Space
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="3dp" />
                    <TextView
                        android:id="@+id/tvRestaurantPlaces"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Places"
                        android:fontFamily="@font/appfont"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"/>
                    <Space
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="3dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|top"
                    android:padding="@dimen/_3sdp"
                    android:weightSum="1">
                    <ImageView
                        android:id="@+id/ivClose"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/ic_close"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_2sdp">
                <TextView
                    android:id="@+id/tvFoodTruckAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:fontFamily="@font/appfont"
                    android:gravity="start"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="textStart"
                    android:text="25,raja street,new ramakrishnapuram,Tirupur-641607"
                    android:visibility="gone"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:orientation="horizontal"
                android:gravity="start"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_1sdp">
                <RatingBar
                    android:id="@+id/rtbTruckRating"
                    style="@style/foodRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="1"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:isIndicator="true"
                    android:paddingTop="@dimen/_4sdp" />
                <TextView
                    android:id="@+id/tvTruckRatingText"
                    android:gravity="center"
                    android:fontFamily="@font/appfont"
                    android:layout_gravity="center|start"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="(5.0)"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvViewRestaurant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View"
                    android:fontFamily="@font/appfont"
                    android:padding="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_20sdp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
