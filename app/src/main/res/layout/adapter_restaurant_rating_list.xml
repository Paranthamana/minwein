<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/xml_rounded_rectangle">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">

            <TextView
                android:id="@+id/tvRatingsName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:text="Rajesh Prabhu"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/appfontmedium"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:gravity="start">

            <TextView
                android:id="@+id/tvRestaurantRatingFirstName"
                android:layout_width="@dimen/_90sdp"
                android:gravity="center|start"
                android:layout_height="@dimen/_20sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/appfont"
                android:padding="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_1sdp" />
            <TextView
                android:layout_width="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:text=":"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_10sdp"/>
            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp" />
            <RatingBar
                android:id="@+id/rtbRatingDeliveryTime"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:isIndicator="true"
                android:rating="4"
                android:stepSize="0.5"
                android:paddingTop="@dimen/_4sdp" />

            <TextView
                android:id="@+id/tvRestaurantRatingFirstNameValue"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/appfont"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(4.0)"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:gravity="start">

            <TextView
                android:id="@+id/tvRestaurantRatingSecondName"
                android:layout_width="@dimen/_90sdp"
                android:gravity="center|start"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_1sdp"
                android:textSize="@dimen/_10sdp"
                android:text=""
                android:fontFamily="@font/appfont"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_1sdp" />
            <TextView
                android:layout_width="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:text=":"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_10sdp"/>
            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp" />
            <RatingBar
                android:id="@+id/rtbRatingFoodTemperature"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:rating="4"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:paddingTop="@dimen/_4sdp" />

            <TextView
                android:id="@+id/tvRestaurantRatingSecondNameValue"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(4.0)"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:gravity="start">

            <TextView
                android:id="@+id/tvRestaurantRatingThirdName"
                android:layout_width="@dimen/_90sdp"
                android:gravity="center|start"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_1sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/appfont"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_1sdp" />

            <TextView
                android:layout_width="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:text=":"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_10sdp"/>
            <Space
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp" />
            <RatingBar
                android:id="@+id/rtbRatingCustomerService"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:rating="4"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:paddingTop="@dimen/_4sdp" />

            <TextView
                android:id="@+id/tvRestaurantRatingThirdNameValue"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/appfont"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(4.0)"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvRestaurantRatingDateTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2018-01-09"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/appfont"
                android:gravity="start|bottom"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_5sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:gravity="center|bottom">
            <View
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightgray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvRestaurantRatingDescription"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Lorem Ipsum is simply dummy of the printing and typrsetting industry.Ipsum has been the industry's 1500's"
                android:maxLines="2"
                android:fontFamily="@font/appfont"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_5sdp"
                android:gravity="center|start"/>
        </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>