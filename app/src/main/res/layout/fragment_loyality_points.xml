<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.minwein.customer.fragment.LoyalityPointsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_loyalty_points"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <TextView
                    android:id="@+id/tvLoyaltyPointsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/appfontmedium"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_gravity="center" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llloyalitypoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvYourLoyaltyPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/_15sdp"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/appfontmedium" />

                <TextView
                    android:id="@+id/tvLoyaltyDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text=""
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/appfont"
                    android:maxLines="2"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/flLoyalImgTxt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rewards_bg" />

                <TextView
                    android:id="@+id/tvLoyaltyPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/appfontmedium"
                    android:layout_gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_30sdp"
                    android:textStyle="normal" />

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvloyaltyDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_25sdp"
                    android:fontFamily="@font/appfont"
                    android:paddingEnd="@dimen/_25sdp"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="2"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btLoyalityPointsConvert"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:fontFamily="@font/appfont"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:background="@drawable/xml_rounded_button"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    android:id="@+id/tvLoyaltyshare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/appfont"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center|left"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_mobile" />
                <TextView
                    android:id="@+id/tvPrefixMobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:layout_marginStart="@dimen/_9sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="+966"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">
                <EditText
                    android:id="@+id/etmobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:background="@null"
                    android:backgroundTint="@color/gray"
                    android:fontFamily="@font/appfont"
                    android:inputType="phone"
                    android:textAlignment="viewStart"
                    android:textDirection="locale"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_65sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center|left"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_rewards" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilEnterPoints"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">
                <EditText
                    android:id="@+id/etEnterPoints"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center|end"
                    android:background="@null"
                    android:fontFamily="@font/appfont"
                    android:backgroundTint="@color/gray"
                    android:inputType="number"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="viewStart"
                    android:textDirection="locale"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_65sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center"
                android:layout_marginBottom="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btShare"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/xml_rounded_button"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/appfont"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

</FrameLayout>
