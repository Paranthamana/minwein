                    android:text=""
                    android:textSize="@dimen/_13sdp" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginLeft="@dimen/_10sdp"-->
                <!--android:layout_marginRight="@dimen/_5sdp"-->
                <!--android:gravity="center"-->
