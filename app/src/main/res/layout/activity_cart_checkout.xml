                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbCartContinueDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
